#apiget.rb

module Puppet::Parser::Functions
  newfunction(:apiget, :type => :rvalue) do |args|
    require 'net/http'
    require 'net/https'
    portal = lookupvar('Logicmonitor::portal')
    user = lookupvar('Logicmonitor::user')
    password = lookupvar('Logicmonitor::password')
    url = "https://#{portal}.logicmonitor.com/santaba#{args[0]}&c=#{portal}&u=#{user}&p=#{password}"
    uri = URI(url)
    http = Net::HTTP.new(uri.host, 443)
    http.use_ssl = true
    http.verify_mode = OpenSSL::SSL::VERIFY_NONE
    req = Net::HTTP::Get.new(uri.request_uri)
    response = http.request(req)
    return response.body
  end
end
